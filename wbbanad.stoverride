    - match: ^https?:\/\/weibointl\.api\.weibo\.cn\/portal\.php\?a=search_topic
      name: weibo1
      type: response
      require-body: true
      timeout: 10

  rewrite:
    - ^https?:\/\/api\.weibo\.cn\/\d\/ad\/preload - reject-dict

    - ^https?:\/\/api\.weibo\.cn\/\d\/cardlist\?v_f=.*Weibo_intl - reject-dict


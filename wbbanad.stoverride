#!desc=WeiboBanAD
name: weibo
desc: WeiboBanAD

http:
  mitm:
    - api.weibo.*
    - *.api.weibo.*
    - mapi.weibo.*
    - *.uve.weibo.com
    - new.vip.weibo.cn
    - boot.biz.weibo.com
  script:
    - match: ^https?:\/\/api\.weibo\.cn\/\d\/groups\/allgroups\/v\d
      name: weibo1
      type: response
      require-body: true
      timeout: 10

    - match: ^https?:\/\/weibointl\.api\.weibo\.cn\/portal\.php\?a=open_app
      name: weibo1
      type: response
      require-body: true
      timeout: 10

    - match: ^https?:\/\/boot.*weibo\.com\/v\d\/ad\/preload
      name: weibo1
      type: response
      require-body: true
      timeout: 10

    - match: ^https?:\/\/api\.weibo\.cn\/\d\/\w{5}\/(statuses_unread_hot_timeline|timeline)
      name: weibo1
      type: response
      require-body: true
      timeout: 10

    - match: ^https?:\/\/api\.weibo\.cn\/\d\/video\/tiny_stream_mid_detail
      name: weibo1
      type: response
      require-body: true
      timeout: 10

    - match: ^https?:\/\/m?api\.weibo\.c(n|om)\/\d\/\w{5}\/cardlist
      name: weibo1
      type: response
      require-body: true
      timeout: 10

    - match: ^https://api.weibo.cn/2/!/client/light_skin
      name: weibo1
      type: response
      require-body: true
      timeout: 10

    - match: ^https://new.vip.weibo.cn/littleskin/preview
      name: weibo1
      type: response
      require-body: true
      timeout: 10

    - match: ^https?:\/\/m?api\.weibo\.c(n|om)\/\d\/(searchall|page\?|messageflow)
      name: weibo1
      type: response
      require-body: true
      timeout: 10

    - match: ^https?:\/\/m?api\.weibo\.c(n|om)\/\d\/statuses/(unread_)?friends(/|_)timeline
      name: weibo1
      type: response
      require-body: true
      timeout: 10

    - match: ^https?:\/\/m?api\.weibo\.c(n|om)\/\d\/groups/timeline
      name: weibo1
      type: response
      require-body: true
      timeout: 10

    - match: ^https?:\/\/m?api\.weibo\.c(n|om)\/\d\/statuses/(container_timeline|unread_hot_timeline|extend|video_mixtimeline|unread_topic_timeline)
      name: weibo1
      type: response
